{
  "name": "gobra-ide",
  "displayName": "Gobra",
  "version": "0.0.1",
  "publisher": "viper",
  "description": "This extension provides interactive IDE features for verifying programs in Gobra.",
  "author": {
    "name": "Chair of Programming Methodology, ETH Zurich"
  },
  "license": "MPL-2.0 License",
  "repository": {
    "type": "git",
    "url": "https://gitlab.inf.ethz.ch/OU-PMUELLER/student-projects/gobra-ide"
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "main": "./out/extension",
  "dependencies": {
    "vscode-languageclient": "^5.2.1",
    "@types/vscode": "^1.43.0",
    "@types/node": "14.0.13",
    "vscode-test": "^1.3.0",
    "fs-extra": "^9.0.0",
    "@types/fs-extra": "^8.1.0",
    "extract-zip": "^2.0.0"
  },
  "devDependencies": {
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "vscode-uri": "^2.1.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "performance-now": "^2.1.0",
    "vs-verification-toolbox": "github:viperproject/vs-verification-toolbox#master"
  },
  "scripts": {
    "vscode:prepublish": "npm run update-vscode && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "activationEvents": [
    "onLanguage:gobra",
    "onLanguage:go"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gobra",
        "extensions": [
          ".gobra"
        ],
        "configuration": "./src/gobra-configuration.json",
        "aliases": [
          "Gobra"
        ]
      }
    ],
    "grammars": [
      {
        "language": "gobra",
        "scopeName": "source.gobra",
        "path": "./src/gobra.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "gobra.flushCache",
        "title": "Flush Viper Server Cache",
        "category": "Gobra"
      },
      {
        "command": "gobra.goifyFile",
        "title": "Goify currently opened File",
        "category": "Gobra"
      },
      {
        "command": "gobra.gobrafyFile",
        "title": "Gobrafy currently opened File",
        "category": "Gobra"
      },
      {
        "command": "gobra.verifyFile",
        "title": "Verify currently opened File",
        "category": "Gobra"
      },
      {
        "command": "gobra.updateGobraTools",
        "title": "Update Gobra Tools",
        "category": "Gobra"
      },
      {
        "command": "gobra.showViperCodePreview",
        "title": "Show Viper Code Preview",
        "category": "Gobra"
      },
      {
        "command": "gobra.showInternalCodePreview",
        "title": "Show Internal Representation Preview",
        "category": "Gobra"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gobra.flushCache",
          "when": "resourceLangId == gobra",
          "group": "Gobra"
        },
        {
          "command": "gobra.goifyFile",
          "when": "resourceLangId == gobra",
          "group": "Gobra"
        },
        {
          "command": "gobra.gobrafyFile",
          "when": "resourceLangId == go",
          "group": "Gobra"
        },
        {
          "command": "gobra.verifyFile",
          "when": "resourceLangId == gobra || resourceLangId == go",
          "group": "Gobra"
        },
        {
          "command": "gobra.updateGobraTools",
          "when": "resourceLangId == gobra || resourceLangId == go",
          "group": "Gobra"
        },
        {
          "command": "gobra.showViperCodePreview",
          "when": "false"
        },
        {
          "command": "gobra.showInternalCodePreview",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "gobra.showViperCodePreview",
          "group": "Gobra@1",
          "when": "editorHasSelection && resourceLangId == gobra"
        },
        {
          "command": "gobra.showInternalCodePreview",
          "group": "Gobra@1",
          "when": "editorHasSelection && resourceLangId == gobra"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gobra.flushCache",
        "key": "alt+shift+f",
        "mac": "alt+shift+f",
        "when": "resourceLangId == gobra"
      },
      {
        "command": "gobra.goifyFile",
        "key": "ctrl+g",
        "mac": "cmd+g",
        "when": "resourceLangId == gobra"
      },
      {
        "command": "gobra.gobrafyFile",
        "key": "ctrl+g",
        "mac": "cmd+g",
        "when": "resourceLangId == go"
      },
      {
        "command": "gobra.verifyFile",
        "key": "f5",
        "mac": "f5",
        "when": "resourceLangId == gobra || resourceLangId == go"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gobra Configuration",
      "properties": {
        "gobraSettings.serverMode": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Perform the verification with ViperServer as backend."
        },
        "gobraSettings.debug": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Output additional debug information."
        },
        "gobraSettings.eraseGhost": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Print the input program without ghost code."
        },
        "gobraSettings.unparse": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Print the parsed program."
        },
        "gobraSettings.printInternal": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Print the internal program representation."
        },
        "gobraSettings.printViper": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Print the encoded Viper program."
        },
        "gobraSettings.parseOnly": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Perform only the parsing step."
        },
        "gobraSettings.loglevel": {
          "scope": "window",
          "type": "string",
          "enum": [
            "OFF",
            "ALL",
            "TRACE",
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR"
          ],
          "default": "OFF",
          "description": "One of the log levels ALL, TRACE, DEBUG, INFO, WARN, ERROR, OFF."
        },
        "gobraSettings.backend": {
          "scope": "window",
          "type": "string",
          "enum": [
            "SILICON",
            "CARBON"
          ],
          "default": "SILICON",
          "description": "Specifies the used Viper backend, one of SILICON, CARBON."
        },
        "gobraSettings.buildVersion": {
          "type": "string",
          "enum": [
            "stable",
            "nightly"
          ],
          "default": "stable",
          "description": "Select the build version of the Gobra Tools."
        },
        "gobraDependencies.gobraToolsPaths": {
          "type": "object",
          "default": {
            "gobraToolsPath": {
              "windows": "C:",
              "linux": "/usr/local",
              "mac": "/Users/Shared"
            },
            "z3Executable": {
              "windows": "$gobraTools$\\z3\\bin\\z3.exe",
              "linux": "$gobraTools$/z3/bin/z3",
              "mac": "$gobraTools$/z3/bin/z3"
            },
            "boogieExecutable": {
              "windows": "$gobraTools$\\boogie\\Binaries\\Boogie.exe",
              "linux": "$gobraTools$/boogie/Binaries/Boogie.exe",
              "mac": "$gobraTools$/boogie/Binaries/Boogie"
            },
            "serverJar": {
              "windows": "$gobraTools$\\server\\server.jar",
              "linux": "$gobraTools$/server/server.jar",
              "mac": "$gobraTools$/server/server.jar"
            }
          },
          "description": "Paths to the dependencies."
        },
        "gobraDependencies.gobraToolsProvider": {
          "type": "object",
          "default": {
            "stable": {
              "windows": "http://viper.ethz.ch/downloads/ViperToolsWin.zip",
              "linux": "http://viper.ethz.ch/downloads/ViperToolsLinux.zip",
              "mac": "http://viper.ethz.ch/downloads/ViperToolsMac.zip"
            },
            "nightly": {
              "windows": "http://viper.ethz.ch/downloads/ViperToolsWin.zip",
              "linux": "http://viper.ethz.ch/downloads/ViperToolsLinux.zip",
              "mac": "http://viper.ethz.ch/downloads/ViperToolsMac.zip"
            }
          }
        }
      }
    }
  }
}
